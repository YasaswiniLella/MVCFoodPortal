@model IEnumerable<MVCFoodPortal.Models.Food>
@{ ViewBag.Title = "Home Page"; }


<div class="container-fluid">
    <nav class="navbar navbar-expand-lg bg-dark navbar-dark " style="color:white">
        @Html.ActionLink("Home", "Index", "Home", null, new { @class = "navbar-brand" })

    </nav>


    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Images/paneerbuttermasala.jpg" class="d-block min-vw-100" alt="" height="600" width="1200">
            </div>
            <div class="carousel-item">
                <img src="~/Images/drinks.jpg" class="d-block min-vw-80" alt="" height="600" width="1200">
            </div>
            <div class="carousel-item">
                <img src="~/Images/makki-ki-roti.jpg" class="d-block min-vw-80" alt="" height="600" width="1200">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="row">
        <div class="col-1"></div>
        <div class="col-11">
            <div class="row">
                @foreach (var foods in Model)
                {
    <div class="card m-4" style="width: 18rem;">
        <img src="~/Images/@foods.Image" class="card-img-top" alt="" height="300" width="300">
        <div class="card-body">
            <h5 class="card-title">@foods.OrderName</h5>

            <h6>@Html.ActionLink("Buy Now", "Details", "Home", new { id = foods.Id }, new { @class = "btn btn-primary" })</h6>
        </div>
    </div>
    }
            </div>
        </div>
    </div>
</div>
